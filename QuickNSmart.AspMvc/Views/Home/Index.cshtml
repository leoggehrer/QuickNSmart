@*@QnSBaseCode*@
@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.AspNetCore.Mvc.Rendering
@using QuickNSmart.AspMvc.Modules.Session
@*Begin:Header*@
@{
#if DEBUG
    string currentView = ((RazorView)ViewContext.View).Path;
    string beginLabel = $"<!--View Begin: '{currentView}'-->";
    @Html.Raw(beginLabel)
#endif
    SessionWrapper sessionWrapper = new SessionWrapper(Context.Session);
    Func<string, string, string> translate2 = sessionWrapper.Translate;
}
@*End:Header*@
@{
    var title = translate2("Home.Page", "Home Page");

    ViewData["Title"] = title;
}

<div class="text-center">
    <h1 class="display-4">@translate2("Home.Title", "Welcome")</h1>
    <p></p>
    <h4>@translate2("Home.Title.Text", "to the QuickNSmart")</h4>
    <p></p>
    <p>@translate2("Home.Body.Text", string.Empty)</p>
</div>

@*Begin:Footer*@
@{
#if DEBUG
    string endLabel = $"<!--View Ende: '{currentView}'-->";

    @Html.Raw(endLabel)
#endif
}
@*End:Footer*@
