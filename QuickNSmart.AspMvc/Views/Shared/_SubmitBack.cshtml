@*@QnSBaseCode*@
@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.AspNetCore.Mvc.Rendering
@using QuickNSmart.AspMvc.Modules.Session
@model QuickNSmart.AspMvc.Models.SubmitBackCmd
@*Begin:Header*@
@{
#if DEBUG
    string currentView = ((RazorView)ViewContext.View).Path;
    string beginLabel = $"<!--View Begin: '{currentView}'-->";
    @Html.Raw(beginLabel)
#endif
    SessionWrapper sessionWrapper = new SessionWrapper(Context.Session);
    Func<string, string> translate = sessionWrapper.Translate;
}
@*End:Header*@

<div class="d-flex bg-transparent">
    <div class="p-sm-2">
        @Html.ActionLink(translate(Model.BackText), Model.BackAction, Model.BackController, null, new { @class=Model.BackCss, style=Model.BackStyle })
    </div>
    <div class="p-sm-2">
        <input type="submit" value="@translate(Model.SubmitText)" class="@Model.SubmitCss" style="@Model.SubmitStyle" />
    </div>
</div>

@*Begin:Footer*@
@{
#if DEBUG
    string endLabel = $"<!--View Ende: '{currentView}'-->";

    @Html.Raw(endLabel)
#endif
}
@*End:Footer*@
