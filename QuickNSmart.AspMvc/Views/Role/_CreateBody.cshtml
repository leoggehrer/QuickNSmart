@*@QnSBaseCode*@
@model QuickNSmart.AspMvc.Models.Persistence.Account.Role
@{
    Func<string, string> translateFor = ViewData["TranslateFor"] as Func<string, string>;
}

<div class="form-group">
    <label class="control-label">@translateFor(nameof(Model.Designation))</label>
    <input asp-for="Designation" class="form-control" />
    <span asp-validation-for="Designation" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">@translateFor(nameof(Model.Description))</label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
